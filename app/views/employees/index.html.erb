<p style="color: green"><%= notice %></p>


<div class="row d-flex align-items-center justify-content-center text-center">
  <div class="col-sm-3  mb-sm-0">
    <div class="card text-bg-dark border-light ">
      <div class="card-body">
        <h5 class="card-title">Total Users</h5>
        <h1 class="card-text"><%= Employee.count() %></h1>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card text-bg-secondary border-light">
      <div class="card-body">
        <h5 class="card-title">Active Users</h5>
        <h1 class="card-text"><%= Employee.where(status: true).count %></h1>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card text-bg-dark border-light">
      <div class="card-body">
        <h5 class="card-title">Inactive Users</h5>
        <h1 class="card-text"><%= Employee.where(status: false).count %></h1>
      </div>
    </div>
  </div>
</div>
<br/>

<div class="card" >
  <div class="card-body">
    <h2 class="card-title">Users</h2>
    <p class="card-text">
     <table class="table  table-striped table-bordered table-hover">
  <thead class="thead-light">
  <tr class= table-dark>
  <th>Name</th>
  <th>Email</th>
  <th>Phone</th>
  <th>twitter</th>
  <th colspan ="4">actions </th>

  </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
      <td><%= link_to employee.first_name + " " + employee.last_name,employee%> </td>
      <td><%= employee.email%></td>
      <td><%= employee.phone%></td>
      <td><%= employee.instagram%></td>
    
      <td><%= link_to "", employee,class:"fa-regular fa-eye text-decoration-none" %></td>
      <td><%= link_to "",edit_employee_path(employee),class:"fa-solid fa-pencil text-decoration-none" %></td>
      <td><%= link_to "", update_status_employee_path(employee),data:{'turbo-method': :patch}, class:"fa-solid fa-arrow-right-arrow-left text-decoration-none" %></td>
      <td><%= link_to "",employee,data:{turbo_method: :delete,
    turbo_confirm: 'Are you sure?'}, class: "fa-solid fa-trash"%></td>
      </tr>
      <% end %>
      </tbody>
      </table>
      <br>

    <%= link_to "", new_employee_path ,class:"fa-solid fa-user-plus"%>

    </p>
    
</div>


  